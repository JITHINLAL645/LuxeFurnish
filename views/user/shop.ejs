    <script>
      function filterProducts() {
        const input = document.getElementById('search_input');
        const filter = input.value.toLowerCase();
        const productCards = document.querySelectorAll('.single-product-wrapper');  // Select individual product cards
    
        productCards.forEach(card => {
          const name = card.querySelector('.product-name').textContent.toLowerCase();  // Select the product name
          const price = card.querySelector('.product-price').textContent.toLowerCase();  // Example: Filter by price as well
    
          // Check if the name or price contains the search string
          if (name.includes(filter) || price.includes(filter)) {
            card.style.display = '';  // Show the card if it matches
          } else {
            card.style.display = 'none';  // Hide the card if it doesn't match
          }
        });
      }
