            <!-- Header Area End -->

            <!-- Product Details Area Start -->
            <div class="single-product-area section-padding-100 clearfix">
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-12">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb mt-50">
                                    <li class="breadcrumb-item"><a
                                            href="/">Home</a></li>
                                    <li class="breadcrumb-item"><a
                                            href="/shop">Shop</a></li>
                                    <li class="breadcrumb-item"><a
                                            href="#">Furniture</a></li>
                                    <!-- <li  class="breadcrumb-item active"
                                        aria-current="page">white modern
                                        chair</li> -->
                                </ol>
                            </nav>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-12 col-lg-7">
                            <div class="single_product_thumb">
                                <div id="product_details_slider" class="carousel slide" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                        <% product.images.forEach(function(image, index) { %>
                                            <li 
                                                class="<%= index === 0 ? 'active' : '' %>" 
                                                data-target="#product_details_slider" 
                                                data-slide-to="<%= index %>" 
                                                style="background-image: url('<%= image %>');"
                                                onclick="changeImage('<%= image %>', `<%= index %>`)">
                                            </li>
                                        <% }); %>
                                    </ol>
                            
                                    <div class="carousel-inner">
                                        <% product.images.forEach((image, index) => { %>
                                            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                                <div class="zoom-container" style="--url: url('<%= image %>');">
                                                    <a class="gallery_img" href="<%= image %>">
                                                        <img class="d-block w-100 zoom-image" src="<%= image %>" alt="Product Image <%= index + 1 %>">
                                                    </a>
                                                </div>
                                            </div>
                                        <% }); %>
                                    </div>
                                </div>
                            </div>
                            
                            <style>
                                .zoom-container {
                                    width: 100%;
                                    height: 100%;
                                    position: relative;
                                    overflow: hidden;
                                    --zoom-x: 50%;
                                    --zoom-y: 50%;
                                    --display: none;
                                }
                            
                                .zoom-container::after {
                                    content: "";
                                    display: var(--display);
                                    position: absolute;
                                    top: 0;
                                    left: 0;
                                    width: 100%;
                                    height: 100%;
                                    background-image: var(--url);
                                    background-size: 200%;
                                    background-position: var(--zoom-x) var(--zoom-y);
                                    z-index: 2;
                                }
                            
                                .zoom-image {
                                    width: 100%;
                                    height: auto;
                                }
                            </style>
                            
                            <script>
                                document.querySelectorAll('.zoom-container').forEach((container) => {
                                    const img = container.querySelector('.zoom-image');
                                    container.addEventListener('mousemove', (event) => {
                                        const rect = container.getBoundingClientRect();
                                        const x = ((event.clientX - rect.left) / rect.width) * 100;
                                        const y = ((event.clientY - rect.top) / rect.height) * 100;
                            
                                        container.style.setProperty('--zoom-x', `${x}%`);
                                        container.style.setProperty('--zoom-y', `${y}%`);
                                        container.style.setProperty('--display', 'block');
                                    });
                            
                                    container.addEventListener('mouseout', () => {
                                        container.style.setProperty('--display', 'none');
                                    });
                                });
                            </script>
                            

                        </div>
                        <div class="col-12 col-lg-5">
                            <div class="single_product_desc">
                                <!-- Product Meta Data -->







                                
                                <div class="product-meta-data">
                                    <div class="line"></div>
                                    <p class="product-price">$<%= product.price %></p>
                                    <h6><%= product.productname %></h6>
                                    <div class="ratings-review mb-15 d-flex align-items-center justify-content-between">
                                        <div class="ratings">
                                            <% for (let i = 0; i < 5; i++) { %>
                                                <% if (i < product.rating) { %>
                                                    <i class="fa fa-star" aria-hidden="true"></i> <!-- Filled star -->
                                                <% } else { %>
                                                    <i class="fa fa-star-o" aria-hidden="true"></i> <!-- Empty star -->
                                                <% } %>
                                            <% } %>
                                        </div>

                                        <div class="review">
                                            
                                          <p>Review</p>
                                        </div>
                                        <!-- <style>
                                            .review {
                                            
     display: flex;
    flex-direction: column;
    align-items: flex-start;
}

textarea {
    margin-bottom: 10px; /* Space between textarea and button */
}

button {
    align-self: flex-start; /* Align the button to the left (under the textarea) */
}

                                        </style> -->
                                        
                                        
                                        
                                    </div>
                                    <p class="avaibility"><i class="fa fa-circle"></i> <%= product.stock > 0 ? 'In Stock' : 'Out of Stock' %></p>
                                </div>
                                <p></p>
                                <!-- Product Specifications -->
                                <div class="product-specifications">
                                    <h5>Specifications:</h5>
                                    <ul>
                                        <% product.specifications.forEach(function(spec) { %>
                                            <li><strong><%= spec.key %>:</strong> <%= spec.value %></li>
                                        <% }); %>
                                    </ul>
                                </div>
                                
                                
                                
                                
                    






                                <div class="short_overview my-5">
                                    <p><%= product.description %></p>
                                </div>
                    
                                <!-- Add to Cart Form -->
                                 <form class="cart clearfix" method="post" action="/addtocart/<%= product._id %>">
                                    <div class="cart-btn d-flex mb-50">
                                        <p>Qty</p>
                                        <div class="quantity">
                                            <span class="qty-minus" onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty ) && qty > 1 ) effect.value--; return false;">
                                                <i class="fa fa-caret-down" aria-hidden="true"></i>
                                            </span>
                                            <input type="number" class="qty-text" id="qty" step="1" min="1" max="<%= product.stock %>" name="quantity" value="1">
                                            <span class="qty-plus" onclick="var effect = document.getElementById('qty'); var qty = effect.value; if( !isNaN( qty )) effect.value++; return false;">
                                                <i class="fa fa-caret-up" aria-hidden="true"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <button type="submit" name="addtocart" class="btn amado-btn">Add to cart</button>
                                </form> 
                            </div>
                        </div>
                    </div>
                    
                    <script>

                        // Function to change the image when a thumbnail is clicked
                        function changeImage(imageUrl, index) {
                            // Update the main carousel image to the clicked thumbnail image
                            const carouselInner = document.querySelector('.carousel-inner');
                            const activeItem = carouselInner.querySelector('.carousel-item.active');
                            
                            // Get the carousel item by index
                            const targetItem = carouselInner.querySelectorAll('.carousel-item')[index];
                            
                            // Update the source of the image in the active carousel item
                            activeItem.classList.remove('active');
                            targetItem.classList.add('active');
                    
                            // Optionally, you can change the image source of the main image in the first carousel item
                            const mainImage = targetItem.querySelector('img');
                            mainImage.src = imageUrl;
                        }
                        
                    </script>
                    

                

                </div>
