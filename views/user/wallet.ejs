                contact: '9740446155'
              },
              theme: {
                color: '#000000'
              }
            }
            const razorpay = new Razorpay(options);
            razorpay.open();
          } else {
            Swal.fire({
              icon: 'error',
              title: 'failed to create order',
            })
  
          }
        } catch (error) {
          console.error('Error adding funds:', error);
          swal("Error", "An error occurred while adding funds. Please try again.", "error");
        }  
      }
